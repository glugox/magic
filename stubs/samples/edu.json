{
    "app": {
        "name": "EduTrack",
        "seedEnabled": true,
        "seedCount": 50,
        "devMode": true
    },
    "entities": [
        {
            "name": "Student",
            "fields": [
                { "name": "id", "type": "bigIncrements", "nullable": false },
                { "name": "first_name", "type": "string", "nullable": false, "sortable": true, "searchable": true, "isName": true },
                { "name": "last_name", "type": "string", "nullable": false, "sortable": true, "searchable": true, "isName": true },
                { "name": "email", "type": "string", "nullable": false, "unique": true, "sortable": true, "searchable": true },
                { "name": "enrollment_date", "type": "date", "nullable": false, "sortable": true }
            ],
            "relations": [
                { "type": "hasMany", "relatedEntityName": "Enrollment", "foreignKey": "student_id" },
                { "type": "belongsToMany", "relatedEntityName": "Course", "pivot": "enrollments", "foreignKey": "student_id", "relatedKey": "course_id" }
            ]
        },
        {
            "name": "Course",
            "fields": [
                { "name": "id", "type": "bigIncrements", "nullable": false },
                { "name": "title", "type": "string", "nullable": false, "sortable": true, "searchable": true },
                { "name": "description", "type": "text", "nullable": true, "searchable": true },
                { "name": "credits", "type": "integer", "nullable": false, "sortable": true }
            ],
            "relations": [
                { "type": "belongsToMany", "relatedEntityName": "Student", "pivot": "enrollments", "foreignKey": "course_id", "relatedKey": "student_id" },
                { "type": "hasMany", "relatedEntityName": "Assignment", "foreignKey": "course_id" }
            ]
        },
        {
            "name": "Enrollment",
            "fields": [
                { "name": "id", "type": "bigIncrements", "nullable": false },
                { "name": "student_id", "type": "unsignedBigInteger", "nullable": false },
                { "name": "course_id", "type": "unsignedBigInteger", "nullable": false },
                { "name": "enrolled_on", "type": "date", "nullable": false },
                { "name": "status", "type": "enum", "nullable": false, "values": ["active", "completed", "dropped"], "default": "active" }
            ],
            "relations": [
                { "type": "belongsTo", "relatedEntityName": "Student", "foreignKey": "student_id" },
                { "type": "belongsTo", "relatedEntityName": "Course", "foreignKey": "course_id" }
            ]
        },
        {
            "name": "Assignment",
            "fields": [
                { "name": "id", "type": "bigIncrements", "nullable": false },
                { "name": "course_id", "type": "unsignedBigInteger", "nullable": false },
                { "name": "title", "type": "string", "nullable": false, "searchable": true },
                { "name": "description", "type": "text", "nullable": true, "searchable": true },
                { "name": "due_date", "type": "date", "nullable": false }
            ],
            "relations": [
                { "type": "belongsTo", "relatedEntityName": "Course", "foreignKey": "course_id" },
                { "type": "hasMany", "relatedEntityName": "Submission", "foreignKey": "assignment_id" }
            ]
        },
        {
            "name": "Submission",
            "fields": [
                { "name": "id", "type": "bigIncrements", "nullable": false },
                { "name": "assignment_id", "type": "unsignedBigInteger", "nullable": false },
                { "name": "student_id", "type": "unsignedBigInteger", "nullable": false },
                { "name": "submitted_on", "type": "dateTime", "nullable": false },
                {
                    "name": "grade",
                    "type": "decimal",
                    "nullable": true,
                    "sortable": true,
                    "precision": 5,
                    "scale": 2
                }
            ],
            "relations": [
                { "type": "belongsTo", "relatedEntityName": "Assignment", "foreignKey": "assignment_id" },
                { "type": "belongsTo", "relatedEntityName": "Student", "foreignKey": "student_id" }
            ]
        }
    ]
}
