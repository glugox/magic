{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AppConfig",
    "type": "object",
    "required": ["app", "entities"],
    "properties": {
        "app": {
            "type": "object",
            "required": ["name", "seedEnabled", "seedCount"],
            "properties": {
                "disabled": { "type": "boolean" },
                "name": { "type": "string" },
                "vendor": { "type": "string" },
                "seedEnabled": { "type": "boolean" },
                "seedCount": { "type": "integer", "minimum": 0 },
                "fakerMappings": {
                    "type": "object",
                    "additionalProperties": { "type": "string" }
                }
            }
        },
        "entities": {
            "type": "array",
            "items": { "$ref": "#/definitions/Entity" }
        }
    },
    "definitions": {
        "Entity": {
            "type": "object",
            "required": ["name", "fields"],
            "properties": {
                "name": { "type": "string" },
                "fields": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/Field" }
                },
                "relations": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/Relation" }
                },
                "settings": { "type": "object", "additionalProperties": true },
                "filters": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/Filter" }
                },
                "actions": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/Action" }
                }
            }
        },
        "Field": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
                "name": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": [
                        "id", "string", "text", "password", "boolean",
                        "integer", "float", "decimal", "date", "dateTime",
                        "enum", "json", "unsignedBigInteger"
                    ]
                },
                "unique": { "type": "boolean" },
                "indexed": { "type": "boolean" },
                "sortable": { "type": "boolean" },
                "searchable": { "type": "boolean" },
                "hidden": { "type": "boolean" },
                "nullable": { "type": "boolean" },
                "default": {},
                "min": { "type": "number" },
                "max": { "type": "number" },
                "options": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        },
        "Relation": {
            "type": "object",
            "required": ["type", "relatedEntityName"],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["hasMany", "hasOne", "belongsTo", "belongsToMany"]
                },
                "relatedEntityName": { "type": "string" },
                "as": { "type": "string" },
                "foreignKey": { "type": "string" },
                "pivot": { "type": "string" }
            }
        },
        "Filter": {
            "type": "object",
            "required": ["field", "type"],
            "properties": {
                "field": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": [
                        "text", "boolean", "enum", "multi_select", "range",
                        "date_range", "dateTime", "dateTime_range",
                        "has_one", "has_many", "belongs_to", "belongs_to_many"
                    ]
                },
                "label": { "type": "string" },
                "options": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "default": {},
                "min": { "type": "number" },
                "max": { "type": "number" },
                "relatedEntityName": { "type": "string" }
            }
        },
        "Action": {
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "command": { "type": "string" },
                "label": { "type": "string" },
                "field": { "type": "string" },
                "icon": { "type": "string" },
                "description": { "type": "string" }
            },
            "additionalProperties": true,
            "allOf": [
                {
                    "if": { "properties": { "type": { "const": "command" } } },
                    "then": { "required": ["command"] }
                }
            ]
        }
    }
}
